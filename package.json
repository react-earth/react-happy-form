{
  "name": "react-atom",
  "version": "independent",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/react-earth/react-happy-form.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "watch": "lerna run watch --parallel --stream",
    "release": "lerna version -m \"chore: publish packages\" --conventional-commits --create-release github -y && lerna publish from-git -y"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "lerna": "^5.1.6",
    "nx": "^14.3.6"
  }
}
